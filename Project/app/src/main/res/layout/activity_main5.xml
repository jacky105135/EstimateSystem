<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.project.Main5Activity">


    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:titleTextColor="@android:color/white"
        android:background="@color/colorblue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密碼設定"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/finish"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/write"
        android:background="@drawable/box_3"
        android:gravity="center"
        android:text="設定完成"
        android:textAlignment="center"
        android:textColor="@color/colorgreen3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/write"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/identidied"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box_2"
        android:gravity="center"
        android:text=" 設定新密碼"
        android:textColor="@color/colorgreen3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/identidied"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/box_1_1"
        android:text="身分驗證"
        android:textSize="18sp"
        android:textColor="@color/colorgreen3"
        android:gravity="center"
        android:textStyle="bold"
        />


    <AutoCompleteTextView
        android:id="@+id/id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="20dp"
        android:hint="員工代號"
        android:paddingStart="15dp"
        android:textSize="18sp" />

    <AutoCompleteTextView
        android:id="@+id/id_num"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="232dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/id"
        android:drawablePadding="12dp"
        android:hint="身分證後4碼"
        android:maxLength="4"
        android:paddingStart="15dp"
        android:textSize="18sp" />

  <!-- <TextView
        android:id="@+id/idnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="員工代號/學號:"
        android:layout_below="@+id/identidied"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/fournum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="身分證後4碼:"
        android:layout_below="@+id/idnum"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="78dp"
        android:background="@android:drawable/editbox_background" />

    <EditText
        android:id="@+id/id_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id"
        android:layout_marginStart="148dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"/>-->

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_num"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="106dp"
        android:background="@drawable/button2"
        android:text="確定"
        android:textColor="@color/colorwhite"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
