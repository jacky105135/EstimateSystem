<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/excellent"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/greenrack"
            android:backgroundTint="#f67280"
            android:paddingStart="150dp"
            android:text="回饋"
            android:textColor="@color/colorwhite"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/excellentthing"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignEnd="@+id/excellent"
            android:layout_alignStart="@+id/excellent"
            android:textSize="20sp"
            android:layout_below="@+id/excellent"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textMultiLine" />


        <TextView
            android:id="@+id/directview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/excellentthing"
            android:layout_marginTop="10dp"
            android:text="直接觀察時間"
            android:textSize="20sp"
            android:layout_alignStart="@+id/excellent"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/view_time"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@+id/excellentthing"
            android:layout_marginLeft="130dp"
            android:paddingStart="20dp"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:background="#fafafa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/excellentthing"
            android:textSize="20sp"
            android:text="分鐘 "
            android:layout_marginLeft="195dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/feedbacktime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/directview"
            android:layout_marginTop="20dp"
            android:text="回饋時間"
            android:textSize="20sp"
            android:layout_alignStart="@+id/excellent"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/view_time2"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_below="@+id/directview"
            android:layout_marginLeft="90dp"
            android:textSize="20sp"
            android:paddingStart="20dp"
            android:background="#fafafa"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/directview"
            android:textSize="20sp"
            android:text="分鐘 "
            android:layout_marginLeft="155dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</ScrollView>

</RelativeLayout>