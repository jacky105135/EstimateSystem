<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.project.Main3Activity">


    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorblue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="註冊"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/finish"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/choosechar"
        android:layout_marginEnd="10dp"
        android:background="@drawable/box_3"
        android:gravity="center"
        android:text="註冊完成"
        android:textAlignment="center"
        android:textColor="@color/colorgreen3"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/choosechar"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/box_1"
        android:text="選擇身分"
        android:textSize="18sp"
        android:textColor="@color/colorgreen3"
        android:gravity="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/write"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/box_2_1"
        android:text="填寫資料"
        android:textSize="18sp"
        android:textColor="@color/colorgreen3"
        android:gravity="center"
        android:textStyle="bold"
        />

    <AutoCompleteTextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="姓名"
        android:background="@drawable/rounded_white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@drawable/member"
        android:textSize="18sp"
        android:drawablePadding="20dp"
        android:paddingStart="15dp"
        android:id="@+id/editText3"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/choosechar"
        android:layout_marginTop="30dp"
        />

    <AutoCompleteTextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="EMAIL"
        android:background="@drawable/rounded_white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@drawable/email"
        android:textSize="18sp"
        android:drawablePadding="20dp"
        android:paddingStart="15dp"
        android:id="@+id/editText4"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/editText3"
        />

    <AutoCompleteTextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="設定密碼"
        android:background="@drawable/rounded_white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@drawable/key"
        android:textSize="18sp"
        android:drawablePadding="20dp"
        android:paddingStart="15dp"
        android:id="@+id/editText5"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/editText4"
        android:inputType="textPassword"
        />

    <AutoCompleteTextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="密碼確認"
        android:background="@drawable/rounded_white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@drawable/keycheck"
        android:textSize="18sp"
        android:drawablePadding="20dp"
        android:paddingStart="15dp"
        android:id="@+id/editText6"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/editText5"
        android:inputType="textPassword"
        />



