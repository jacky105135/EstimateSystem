<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.project.Main6Activity">

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:titleTextColor="@color/colorblue"
        android:background="@color/colorblue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密碼設定"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/finish"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/write"
        android:background="@drawable/box_3"
        android:gravity="center"
        android:text="設定完成"
        android:textAlignment="center"
        android:textColor="@color/colorgreen3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/identidied"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/box_1"
        android:text="身分驗證"
        android:textSize="18sp"
        android:textColor="@color/colorgreen3"
        android:gravity="center"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/write"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/identidied"
        android:layout_centerHorizontal="true"
        android:background="@drawable/box_2_1"
        android:gravity="center"
        android:text=" 設定新密碼"
        android:textColor="@color/colorgreen3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/newpass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="20dp"
        android:hint="設定新密碼"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textSize="18sp" />

    <AutoCompleteTextView
        android:id="@+id/passcomfirm"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/keycheck"
        android:drawablePadding="20dp"
        android:hint="新密碼確認"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textSize="18sp" />

